Question Link: https://www.hackerrank.com/challenges/the-love-letter-mystery/problem?h_r=profile

Solution:

import java.util.*;
public class Main{
  public static void main(String[] args){
   Scanner sc = new Scanner(System.in);
   int numberOfTestCaese=sc.nextInt();
   
   while(numberOfTestCaese>0){
   String str = sc.next();
   char[] chr= str.toCharArray(); 
   reverseKrde(chr);
     numberOfTestCaese--;
   }      
  }
public static void reverseKrde(char[] str){
  int sum=0;
   for(int i=0,j=str.length-1;i<str.length;i++,j--){
     if(str[i]<str[j]){
        if(str[i]==str[j]){
           continue;
        }
        else{
          while(str[i]!=str[j]){
            sum++;
                str[j]--;
                }
        }
     }
     else{
     if(str[i]==str[j]){
           continue;
        }
        else{
          while(str[i]!=str[j]){
            sum++;
                str[i]--;
                }
        }



     }
   }
   System.out.println(sum);
}

}
